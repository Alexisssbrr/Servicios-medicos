@model IEnumerable<ServicioMedico.Models.VisitaMedica>

@{
    ViewData["Title"] = "Historial Médico";
}

<div class="container mt-4">
    <div class="d-flex align-items-center mb-4">
        <a asp-action="Index" class="btn btn-outline-secondary me-3">← Volver</a>
        <h2 class="mb-0">Historial de: <span class="text-primary">@ViewData["Matricula"]</span></h2>
    </div>

    <div class="vstack gap-3">
        
        @if (!Model.Any())
        {
            <div class="alert alert-info">Este alumno no tiene visitas registradas.</div>
        }

        @foreach (var visita in Model)
        {
            <div class="card shadow-sm border-start border-primary border-4">
                <div class="card-body">
                    <div class="row align-items-center text-center text-md-start">
                        <div class="col-md-2">
                            <h5 class="mb-0 text-primary">@visita.FechaVisita.ToString("dd MMM")</h5>
                            <small class="text-muted">@visita.FechaVisita.ToString("yyyy")</small>
                            <small class="d-block text-muted">@visita.FechaVisita.ToString("HH:mm") hrs</small>
                        </div>
                        <div class="col-md-3">
                            <small class="d-block text-muted">Carrera</small>
                            <strong>@visita.Carrera</strong>
                        </div>
                        <div class="col-md-3">
                            <small class="d-block text-muted">Departamento</small>
                            <span class="badge bg-info text-dark">Enfermería</span>
                        </div>
                        <div class="col-md-4 text-md-end mt-3 mt-md-0">
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal-@visita.Id">
                                Ver Diagnóstico
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="modal-@visita.Id" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Detalle de la Visita</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p class="text-muted mb-2 small">Atendido el: @visita.FechaVisita</p>
                            
                            <h6 class="fw-bold">Signos Vitales:</h6>
                            <ul>
                                <li>Temp: @visita.Temperatura °C</li>
                                <li>Presión: @visita.PresionArterial</li>
                                <li>Sat: @visita.Saturacion %</li>
                            </ul>

                            <h6 class="fw-bold mt-3">Diagnóstico:</h6>
                            <div class="p-3 bg-light border rounded">
                                "@visita.Diagnostico"
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>